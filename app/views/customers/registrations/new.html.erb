<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4>新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
      
        <table class="table table-borderless">
          <tr>
            <td><p>名前</p></td>
            <td>
              <%= f.label :last_name, "(姓)" %>
            </td>
            <td>
              <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
            </td>
            <td>
              <%= f.label :first_name, "(名)" %>
            </td>
            <td>
              <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
            </td>
          </tr>
          
          <tr>
            <td><p>フリガナ</p></td>
            <td>
              <%= f.label :last_name_kana, "(セイ)" %>
            </td>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
            </td>
            <td>
              <%= f.label :first_name_kana, "(メイ)" %>
            </td>
            <td>
              <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
            </td>
          </tr>
          
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td></td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td>
              <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td></td>
            <td colspan="3">
              <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", size: 58 %>
             </td>
          </tr>
          
          <tr>
            <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
            <td></td>
            <td>
              <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)" %></td>
            <td></td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td></td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success btn-block text-white" %></td>
            <td></td>
            <td></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <h4>既に登録済みの方</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <p><%= link_to "こちら",  new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>