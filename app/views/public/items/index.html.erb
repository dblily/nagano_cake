<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="box_genre">
        <div class="box-title"><h5>ジャンル検索</h5></div>
        <% @genres.each do |genre| %>
          <p class="p_genre">
            <%= link_to items_path(genre_id: genre.id) do %>
              <%= genre.name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
      
    <div class="col-md-9">
      <h3><%= @name + '一覧（全' + @count.to_s + '件）' %></h3>
      <div class="row d-flex flex-row">
        <% @items.each do |item| %>
          <div class="col-md-3 p-2 bd-highlight">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 180, 130 %>
            <% end %>
            <p><%= item.name %></p>
            <p><%= '¥' + item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
  