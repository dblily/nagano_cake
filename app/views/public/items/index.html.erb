<h2>商品一覧</h2>

<h3>ジャンル検索</h3>
<% @genres.each do |genre| %>
  <p>
    <%= link_to items_path(genre_id: genre.id) do %>
      <%= genre.name %>
    <% end %>
  </p>
<% end %>

<h3><%= @name + '一覧（全' + @count.to_s + '件）' %></h3>
<% @items.each do |item| %>
  <%= link_to item_path(item) do %>
    <%= attachment_image_tag item, :image, :fill, 50, 50 %>
  <% end %><br>
  <%= item.name %><br>
  <%= '¥' + item.price.to_s(:delimited) %><br>
<% end %>
  