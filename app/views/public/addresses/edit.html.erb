<div class="container">
  <div class="row">
    <div class="col-md-10">
      
      <div id="alert">
        <% if @address.errors.any? %>
          <p>入力内容を確認してください</p>
         <% end %>
      </div>

      <h4>配送先編集</h4>

      <%= form_with model:@address, local:true do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td colspan="2"><%= f.text_field :address, size: 50 %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更内容を保存', class: "btn btn-success text-white" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>