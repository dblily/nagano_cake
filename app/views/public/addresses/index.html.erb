<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if @address.errors.any? %>
    <h3><%= @address.errors.count %> error prohibited this item from being saved:</h3>
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>


<h2>配送先一覧・追加</h2>

<%= form_with model:@address, local:true do |f| %>
  <p>郵便番号(ハイフンなし)<%= f.text_field :postal_code, placeholder: "0000000" %></p>
  <p>住所<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></p>
  <p>宛名<%= f.text_field :name, placeholder: "令和道子" %></p>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛先</th>
    <th></th>
  </tr>
<% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td><%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
<% end %>
</table>