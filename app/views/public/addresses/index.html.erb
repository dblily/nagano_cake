<div class="container">
  <div class="row">
    <div class="col-md-10">

      <div id="alert">
        <% if @address.errors.any? %>
          <p>入力内容を確認してください</p>
         <% end %>
      </div>

      <h4>配送先一覧・追加</h4>
      
      <%= form_with model:@address, local:true do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td colspan="2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 40 %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name, placeholder: "令和道子" %></td>
            <td><%= f.submit '新規登録', class: "btn btn-success text-white" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th>
            <th></th>
          </tr>
        </thead>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm text-white" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm text-white" %>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>