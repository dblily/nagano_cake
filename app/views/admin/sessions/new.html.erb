<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4>管理者ログイン</h4>
    </div>
  </div>
  
  <div class="row justify-content-around">
    <div class="col-md-7">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless ml-5">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", size: 40 %></td>
          </tr>
      
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary text-white" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>