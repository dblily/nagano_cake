<div class="container">
  <div class="row">
    <div class="col-md-7">

      <div id="alert">
        <% if @customer.errors.any? %>
          <p>入力内容を確認してください</p>
        <% end %>
      </div>
      
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
      
        <%= form_with model: [:admin, @customer], local:true do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= f.text_field :last_name%>
              <%= f.text_field :first_name%>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= f.text_field :last_name_kana%>
              <%= f.text_field :first_name_kana%>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code%></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2"><%= f.text_field :address, size:45 %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number%></td>
          </tr>
          <tr>
            <td>メールアドレス</td></td>
            <td><%= f.text_field :email%></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= f.radio_button :is_active, "true" %>有効 <%=f.radio_button :is_active, "false" %>退会</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success text-white" %></td>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>
      
