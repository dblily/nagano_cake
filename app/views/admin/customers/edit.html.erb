<% if @customer.errors.any? %>
    <h3><%= @customer.errors.count %> error prohibited this item from being saved:</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>

<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>


  <%= form_with model: [:admin, @customer], local:true do |f| %>
  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
        <%= f.text_field :last_name%>
        <%= f.text_field :first_name%>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :last_name_kana%>
        <%= f.text_field :first_name_kana%>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code%></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address%></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number%></td>
    </tr>
    <tr>
      <td>メールアドレス</td></td>
      <td><%= f.text_field :email%></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= f.radio_button :is_active, "true" %>有効 <%=f.radio_button :is_active, "false" %>退会</td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存" %></td>
    </tr>
  </table>
  <% end %>


