<div class="container">
  <div class="row">
    <div class="col-md-10">

      <h4>会員一覧</h4>
      
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_active ? "有効" : "退会" %></td>
          </tr>
        <% end %>
      </table>
      
      <%= paginate @customers %>
    </div>
  </div>
</div>
