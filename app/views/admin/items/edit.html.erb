<div class="container">
  <div class="row">
    
    <div class="col-md-10">

      <div id="alert">
        <% if @item.errors.any? %>
          <p>すべての項目を入力してください</p>
         <% end %>
      </div>

      <h4>商品編集</h4>
      
      <div class="mx-auto" style="width: 600px;">
        <%= form_with model: [:admin, @item], local:true do |f| %>
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :image, "商品画像" %></td>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "商品名" %></td>
              <td><%= f.text_field :name, placeholder: "商品名" %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "商品説明" %></td>
              <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "20x10" %></td>
            </tr>
            <tr>
              <td><%= f.label :genre_id, "ジャンル" %></td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
            </tr>
            <tr>
              <td><%= f.label :price, "税抜価格" %></td>
              <td><%= f.text_field :price, placeholder: "1000" %>円</td>
            </tr>
            <tr>
              <td><%= f.label :is_active, "販売ステータス" %></td>
              <td>
                <%= f.radio_button :is_active, "true", checked: true %>
                <%= f.label :is_active, "販売中" %>
                <%=f.radio_button :is_active, "false" %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '変更を保存', class: "btn btn-success text-white" %></td>
            </tr>
          </table>
        <% end %>
      </div>
      
    </div>
  </div>
</div>