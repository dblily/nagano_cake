<div class="container">
  <div class="row">

    <div class="col-md-10">
      <h4>商品詳細</h4>
    </div>

    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 270, 200 %>
    </div>

    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            税込価格
            <br>
            (税抜価格)
          </td>
          <td><%= @item.add_tax_price.to_s(:delimited) + '(' + @item.price.to_s(:delimited) + ')円' %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      </table>
    </div>
  </div>
      
  <div class="row">
    <div class="col-md-10 text-center">
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success text-white" %>
    </div>
  </div>
</div>
  