<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>商品一覧</h4>
    </div>
    
    <div class="col-md-7">
      <div class="text-right mb-1">
        <button type="button" class="btn btn-outline-secondary rounded-circle p-0", style="width:2rem;height:2rem;"><%= link_to "+", new_admin_item_path %></butoon>
      </div>
    </div>
  </div>
  
  <div class="row">  
    <div class="col-md-10">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
        <% end %>
      </table>
      
      <%= paginate @items %>
    </div>
  </div>
</div>