<h2>商品一覧</h2>
<%= link_to "new", new_admin_item_path %>

<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>販売ステータス</th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td>
      <%= link_to admin_item_path(item) do %>
        <%= item.name %>
      <% end %>
    </td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
    <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
  </tr>
<% end %>
</table>