<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h4>ジャンル編集</h4>
      <%= form_with model: [:admin, @genre], local:true do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更を保存', class: "btn btn-success text-white" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>